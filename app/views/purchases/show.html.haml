.page-header
  %h1=t('.title', purchase: @purchase.name)

%p
  %strong= t '.name'
  %br
  = @purchase.name
%p
  %strong= t '.category'
  %br
  = @purchase.category.name
%p
  %strong= t '.price'
  %br
  = @purchase.price
%p
  %strong= t '.date'
  %br
  = @purchase.date

.form-actions
  = link_to t("helpers.links.back"), purchases_path, :class => 'btn'
  = link_to t("helpers.links.edit"), edit_purchase_path(@purchase), :class => 'btn'
  = link_to t("helpers.links.destroy"), purchase_path(@purchase), :method => "delete", :data => { :confirm => t("helpers.links.confirm", :default => 'Are you sure?') }, :class => 'btn btn-danger'
