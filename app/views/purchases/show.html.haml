- model_class = Purchase
.page-header
  %h1=t '.title', purchase: @purchase.name

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @purchase.name
%p
  %strong= model_class.human_attribute_name(:group) + ':'
  %br
  = @purchase.group
%p
  %strong= model_class.human_attribute_name(:price) + ':'
  %br
  = @purchase.price
%p
  %strong= model_class.human_attribute_name(:date) + ':'
  %br
  = @purchase.date

.form-actions
  = link_to t("helpers.links.back"), purchases_path, :class => 'btn'
  = link_to t("helpers.links.edit"), edit_purchase_path(@purchase), :class => 'btn'
  = link_to t("helpers.links.destroy"), purchase_path(@purchase), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
