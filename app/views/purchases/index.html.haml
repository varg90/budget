- model_class = Purchase
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:group)
      %th= model_class.human_attribute_name(:price)
      %th= model_class.human_attribute_name(:date)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @purchases.each do |purchase|
      %tr
        %td= link_to purchase.name, purchase_path(purchase)
        %td= purchase.group
        %td= purchase.price
        %td= purchase.date
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_purchase_path(purchase), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), purchase_path(purchase), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_purchase_path, :class => 'btn btn-primary'
