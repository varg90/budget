.row
  .span10
    .page-header
      %h1=t '.title'
    %table.table.table-striped
      %tr
        %th= t '.name'
        %th

      - @categories.each do |category|
        %tr
          %td= category.name
          %td
            = link_to t("helpers.links.edit"), edit_category_path(category),
              :class => 'btn btn-mini'
            = link_to t("helpers.links.destroy"), category_path(category),
              :method => :delete, :data => { :confirm => t("helpers.links.confirm") },
              :class => 'btn btn-mini btn-danger'
    %br
      .pagination.pagination-lg
        = paginate @categories
  .span2
    = render 'actions'
