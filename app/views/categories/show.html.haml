.page-header
  %h1=t('.title', category: @category.name)
%p
  %strong= t '.name'
  %br
  = @category.name
.form-actions
  = link_to t("helpers.links.back"), categories_path, :class => 'btn'
  = link_to t("helpers.links.edit"), edit_category_path(@category), :class => 'btn'
  = link_to t("helpers.links.destroy"), category_path(@category), :method => "delete", :data => { :confirm => t("helpers.links.confirm", :default => 'Are you sure?') }, :class => 'btn btn-danger'
